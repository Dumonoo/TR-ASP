@model TimeReportingSystem.Models.User

@{
    ViewData["Title"] = "Zarejestruj się";

}
<h1>@ViewData["Title"]</h1>

<form asp-action="SignUp">
    <div asp-validation-summary="All"></div>
    <div class="form-horizontal">
        <div class="form-group">
            <label asp-for="name">Imię</label><br>
            <input asp-for="name">
        </div>
        <div class="form-group">
            <label asp-for="surname">Nazwisko</label><br>
            <input asp-for="surname">
        </div>
        <div class="form-group">
            <label asp-for="birthDay">Data urodzenia</label><br>
            <input type="date" asp-for="birthDay">
        </div>
        <div class="form-group">
            <label asp-for="userName">Nazwa użytkownika</label><br>
            <input asp-for="userName">
        </div>
        <div class="form-group">
            <input type="submit" value="Register" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}