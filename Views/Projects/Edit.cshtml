@model TimeReportingSystem.Models.Activity

@{
    ViewData["Title"] = "Edytuj projekt: " + ViewData["ProjectCode"];
    double minutes = Model.budget / 60;
}
<h1>@ViewData["Title"]</h1>

<div class="col col-4 justify-content-lg-start">
    <form asp-action="Edit" id="form">
        <div class="form-horizontal">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="name">Nazwa projektu</label>
                <input asp-for="name" class="form-control" value="@Model.name">
            </div>
            <div class="form-group">
                <label asp-for="code">Kod projektu</label>
                <input asp-for="code" class="form-control" readonly value="@Model.code">
                <input type="hidden" asp-for="manager" value="@ViewData["User"]" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="budget">Bud≈ºet (w godzinach)</label><br>
                <input type="number" asp-for="budget" class="form-control" id="changeToMinutes" value="@minutes" min="1" step="1">
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj nowy" class="btn btn-primary"/>
            </div>
        </div>
    </form>
</div>
